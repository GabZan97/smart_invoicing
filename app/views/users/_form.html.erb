<%= form_with(model: user, local: true) do |form| %>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= errors_for(@user) %>

      <div class="form-group row">
          <%= form.label :name, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= form.text_field :name, id: :user_name, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
          <%= form.label :email, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= form.text_field :email, id: :user_email, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
          <%= form.label :tarif, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= form.number_field :tarif, id: :user_tarif, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
          <%= form.label :password, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= form.password_field :password, id: :user_password, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
          <%= form.label :password_confirmation, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= form.password_field :password_confirmation, id: :user_password_confirmation, class: 'form-control' %>
        </div>
      </div>
      <%= form.submit "Submit", class: "btn btn-default"%>

    </div>
  </div>

<% end %>
