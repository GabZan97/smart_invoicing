<% provide(:title, @user.name) %>
<p id="notice"><%= notice %></p>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
        Name: <%= @user.name %>
    </section>
  </aside>
</div>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
        Email: <%= @user.email %>
    </section>
  </aside>
</div>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
        Tarif: <%= @user.tarif %>
    </section>
  </aside>
</div>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Go to home page', root_path %>
