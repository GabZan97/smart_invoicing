<%= form_with(model: client, local: true) do |form| %>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">

    <%= errors_for(@client) %>

    <div class="form-group row">
        <%= form.label :name, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :name, id: :client_name, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
        <%= form.label :codice_fiscale, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :codice_fiscale, id: :client_codice_fiscale, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
        <%= form.label :email, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :email, id: :client_email, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
        <%= form.label :partita_iva, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.number_field :partita_iva, id: :client_partita_iva, class: 'form-control' %>
      </div>
    </div>

  <%= form.submit "Submit", class: "btn btn-default" %>

<% end %>
