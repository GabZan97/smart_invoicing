<% end %>
<div class="" >
  <div class="container-fluid">
    <h1 style="text-align:left">Smart Invoicing</h1>
    <br/>
    <% if logged_in? %>
    <p style="margin-bottom: 30px">

    </p>
    <div class="row">
      <div class="col-md-6 col-md-border">
        <br/>
        <%= link_to "Manage Clients", clients_path, class: "btn btn-default" %>
      </div>
      <div class="col-md-6 col-md-border">
        <br/>
        <%= link_to "Manage Hours", hours_path, class: "btn btn-default" %>
      </div>
