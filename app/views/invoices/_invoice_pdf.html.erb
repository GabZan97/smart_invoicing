<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>Invoice n <%= @new_invoice.id%> | <%= @client.name %> | <%= @user.name %></title>
    <style>
    .invoice-box {
        max-width: 800px;
        margin: auto;
        padding: 30px;
        border: 1px solid #eee;
        box-shadow: 0 0 10px rgba(0, 0, 0, .15);
        font-size: 16px;
        line-height: 24px;
        font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
        color: #555;
    }

    .invoice-box table {
        width: 100%;
        line-height: inherit;
        text-align: left;
    }

    .invoice-box table td {
        padding: 5px;
        vertical-align: top;
    }

    .invoice-box table tr td:nth-child(2) {
        text-align: right;
    }

    .invoice-box table tr.top table td {
        padding-bottom: 20px;
    }

    .invoice-box table tr.top table td.title {
        font-size: 45px;
        line-height: 45px;
        color: #333;
    }

    .invoice-box table tr.information table td {
        padding-bottom: 40px;
    }

    .invoice-box table tr.heading td {
        background: #eee;
        border-bottom: 1px solid #ddd;
        font-weight: bold;
    }

    .invoice-box table tr.details td {
        padding-bottom: 20px;
    }

    .invoice-box table tr.item td{
        border-bottom: 1px solid #eee;
    }

    .invoice-box table tr.item.last td {
        border-bottom: 2px solid #aaa!important;
    }

    .invoice-box table tr.total td:nth-child(2) {
        width: 20%;
        border-bottom: 2px solid #aaa;
        font-weight: bold;
    }
    .invoice-box table tr.subtotal td:nth-child(2) {
        border-bottom: 2px solid #eee;
        font-weight: italic;
    }
    .invoice-box table tr.tax td:nth-child(2) {
        border-bottom: 2px solid #eee;
        font-weight: italic;
    }

    @media only screen and (max-width: 600px) {
        .invoice-box table tr.top table td {
            width: 100%;
            display: block;
            text-align: center;
        }

        .invoice-box table tr.information table td {
            width: 100%;
            display: block;
            text-align: center;
        }
    }

    /** RTL **/
    .rtl {
        direction: rtl;
        font-family: Tahoma, 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
    }

    .rtl table {
        text-align: right;
    }

    .rtl table tr td:nth-child(2) {
        text-align: left;
    }
    </style>
  </head>

<body>
    <div class="invoice-box">
        <table cellpadding="0" cellspacing="0">
            <tr class="top">
                <td colspan="2">
                    <table>
                        <tr>
                            <td class="title">

                            </td>

                            <td>
                                Invoice #: <%= @new_invoice.id %><br>
                                Created: <%= @new_invoice.created_at.to_date %><br>
                                Due: <%= @new_invoice.created_at.to_date + 15 %>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>

            <tr class="information">
                <td colspan="2">
                    <table>
                        <tr>
                            <td>
                                <%= @user.name %><br>
                            </td>

                            <td>
                                <%= @client.name %><br>
                                <%= @client.email %><br>
                                <%= @client.partita_iva %>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>

            <tr class="heading">
                <td>
                    Hours
                </td>

                <td>
                    Price
                </td>
            </tr>
            <% @hours_to_bill.each do |hour| %>
            <tr class="item">
                <td>
                    € <%= (hour.end_time - hour.start_time).to_i * ((User.find_by id: hour.user_id).tarif/3600)%>
                </td>
            </tr>
            <% end %>
            <tr class="subtotal">
              <td></td>
              <td>Subtotal: € <%= @new_invoice.total_amount %></td>
            </tr>
            <tr class="tax">
              <td></td>
              <td>TAX (21%): € <%= @new_invoice.total_amount * 0.21 %></td>
            </tr>
            <tr class="total">
              <td></td>
              <td>
                 <strong>Total: € <%= @new_invoice.total_amount * 1.21 %> </strong>
              </td>
            </tr>
        </table>
    </div>

</body>
</html>
